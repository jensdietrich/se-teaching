<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn">
   <Appenders>
      <Console name="myConsole" target="SYSTEM_OUT"/>
      <Async name="myConsoleAsync">
         <AppenderRef ref="myConsole" />
      </Async>
